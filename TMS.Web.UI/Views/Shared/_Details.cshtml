@{
  //ViewBag.Title = "Details";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="padding-top: 15px;">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="btn-group">
          <span class="btn btn-default" onclick="location.href='@Url.Action("Index", @ViewBag.ControllerName)'"><i class="fa fa-fw fa-home fa-lg"></i></span>
          <span class="btn btn-default" onclick="location.href='@Url.Action("Edit", @ViewBag.ControllerName, new { id = @Model.Id })'"><i class="fa fa-fw fa-edit fa-lg"></i></span>
        </div>
        <div class="btn-group">
          <span class="btn btn-default"><i class="fa fa-fw fa-print fa-lg"></i></span>
        </div>
      </div>
      <div class="panel-body">
        @RenderBody()
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" language="javascript" src=@Url.Content("~/Scripts/Common.js")></script>
